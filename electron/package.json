{
    "name": "swellsync",
    "version": "1.0.0",
    "description": "SwellSync — Prévisions surf en temps réel",
    "main": "main.js",
    "author": "Max Loviat",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win",
        "build:all": "electron-builder --mac --win"
    },
    "build": {
        "appId": "fr.swellsync.app",
        "productName": "SwellSync",
        "directories": {
            "output": "dist"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "icon.png",
            "category": "public.app-category.weather"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "icon.png"
        },
        "nsis": {
            "oneClick": true,
            "installerIcon": "icon.png",
            "uninstallerIcon": "icon.png",
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true
        },
        "dmg": {
            "title": "SwellSync",
            "icon": "icon.png"
        }
    },
    "devDependencies": {
        "electron": "^33.0.0",
        "electron-builder": "^25.0.0"
    }
}